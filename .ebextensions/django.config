container_commands:
  01_migrate:
    command: "source /opt/python/run/virt/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true
  02_createsuperuser:
    command: "source /opt/python/run/virt/bin/activate && python3 manage.py createsuperuser"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/virt/bin/activate && python3 manage.py collectstatic --noinput"


option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: interoves_django.wsgi:application
